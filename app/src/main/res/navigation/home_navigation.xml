<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/albumFragment">

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.greedygame.AlbumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album" >
        <action
            android:id="@+id/action_albumFragment_to_detailsAlbumFragment"
            app:destination="@id/detailsAlbumFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsAlbumFragment"
        android:name="com.example.greedygame.DetailsAlbumFragment"
        android:label="fragment_details_album"
        tools:layout="@layout/fragment_details_album" />
</navigation>